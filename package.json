{
  "name": "pii-checker-addon",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "bench": "vitest bench --config=vitest.bench.config.ts",
    "bench:memory": "vitest bench --config=vitest.bench.config.ts tests/benchmarks/memory.bench.ts",
    "bench:performance": "vitest bench --config=vitest.bench.config.ts tests/benchmarks/performance.bench.ts",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.9",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2"
  }
}
